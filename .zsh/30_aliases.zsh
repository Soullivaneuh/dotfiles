# Just typing the file path without command will open them with vim
alias -s {yml,yaml}=vim

# Type 'd' to list the recent used dirs, then the number of the dir you want to go to.
alias d='dirs -v | head -10'
alias 1='cd -'
alias 2='cd -2'
alias 3='cd -3'
alias 4='cd -4'
alias 5='cd -5'
alias 6='cd -6'
alias 7='cd -7'
alias 8='cd -8'
alias 9='cd -9'

alias zshreload="source $HOME/.zshrc"
